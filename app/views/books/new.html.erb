<div class="page-header"><h1>Create</h1></div>

<%= form_for @book do |f| %>
  

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title%>
  </div>

  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author%>
  </div>

  

  <div class="form-group">
    <%= f.label :summary %>
    <%= f.text_area :summary, size: "60x12" %>
  </div>

  <%= f.submit 'Create', class: 'btn btn-primary btn-lg' %>
<% end %>